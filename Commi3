postgresql:
  enabled: true
  primary:
    persistence:
      existingClaim: superset-postgresql-pvc  # nazwij tak jak Twój PVC
      size: 10Gi

redis:
  enabled: true
  architecture: standalone
  master:
    persistence:
      enabled: false

supersetNode:
  replicas: 1

worker:
  enabled: true
  replicas: 1

beat:
  enabled: true

superset:
  init:
    enabled: true
  configOverrides:
    superset_config.py: |
      # tutaj skopiujesz z poprzedniej wersji konfigurację

ingress:
  enabled: true
  ingressClassName: "nginx"
  annotations:
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
  hosts:
    - host: superset.yourdomain.local
      paths:
        - path: /
          pathType: Prefix
  tls:
    - hosts:
        - superset.yourdomain.local
      secretName: superset-tls

persistence:
  enabled: true
  storageClass: nfs-storage
  size: 10Gi
  accessMode: ReadWriteMany
